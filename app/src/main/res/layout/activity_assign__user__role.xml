<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical"
    tools:context=".Assign_User_Role">

    <TextView
        android:id="@+id/label_assign"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/create_user_groups_amp_assign_employees"
        android:textAlignment="center"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"/>

    <Spinner
        android:id="@+id/spin_user_grup_select"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_group"
        android:drawablePadding="30dp"
        android:background="@drawable/roundedspinner"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/listEmp"
        android:layout_marginStart="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/spin_user_grup_select"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="130dp"
        android:background="#404050"
        android:divider="#4e4b5d"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="false"
        android:listSelector="#4e4b5d"/>

    <Button
        android:id="@+id/btn_assign_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:text="@string/assign"
        android:textSize="18sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="5px"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/btn_assign_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:text="@string/exit"
        android:textSize="18sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="5px"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/txtUserNameAssign"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/label_assign"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/lstSelectText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/spin_user_grup_select"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/invisibleUserGID"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/btn_assign_group"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/invisibleUserGName"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/invisibleUserGID"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/invisibleCurUser"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/invisibleUserGName"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/invisibleNIC"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/invisibleCurUser"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>
</RelativeLayout>